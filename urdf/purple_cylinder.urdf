<robot name="simple_cylinder">
  <link name="my_cylinder">
    <inertial>
      <origin xyz="2 0 0" />
      <mass value="1.0" />
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="2 0 1"/>
       <geometry>
        <cylinder length="1" radius="1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="2 0 1"/>
       <geometry>
        <cylinder length="1" radius="1"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="my_cylinder">
    <material>Gazebo/Purple</material>
  </gazebo>
</robot>
